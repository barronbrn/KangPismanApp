<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/actv_bantuan"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.BantuanActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_bantuan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Bantuan &amp; Dukungan" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pertanyaan Umum (FAQ)"
                android:textAppearance="?attr/textAppearanceTitleLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bagaimana cara saya menyetor sampah?"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Buka halaman Beranda, klik tombol 'Setor Sampah', tambahkan item yang ingin Anda setor, lalu klik 'Buat QR Code'. Tunjukkan QR Code tersebut kepada petugas di lokasi." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bagaimana cara kerja poin?"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Anda akan mendapatkan 10 poin untuk setiap 0.5 kg sampah yang berhasil dikonfirmasi oleh petugas. Poin ini dapat Anda tukarkan dengan berbagai hadiah menarik di halaman Reward." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Butuh Bantuan Lain?"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Jika Anda memiliki pertanyaan lain atau mengalami masalah teknis, jangan ragu untuk menghubungi tim dukungan kami melalui email di support@kangpisman.app" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>