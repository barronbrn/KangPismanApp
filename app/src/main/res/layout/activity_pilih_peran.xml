<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satu Langkah Lagi!"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pilih peran Anda untuk menyelesaikan pendaftaran."
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBodyLarge"/>

    <RadioGroup
        android:id="@+id/radio_group_role_pilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_button_warga_pilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warga (Saya ingin menyetor sampah)"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_button_petugas_pilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Petugas (Saya akan mengambil sampah)"/>
    </RadioGroup>

    <Button
        android:id="@+id/button_simpan_peran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Simpan dan Lanjutkan"/>
</LinearLayout>