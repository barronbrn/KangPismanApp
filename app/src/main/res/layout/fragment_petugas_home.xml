<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.PetugasHomeFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_petugas"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:title="Beranda Petugas"
        app:titleCentered="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang, Petugas!"
            android:textAppearance="?attr/textAppearanceHeadlineSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Silakan pilih metode penimbangan:"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button_scan_live"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingVertical="12dp"
            android:text="Pindai Langsung dengan Kamera"
            app:icon="@drawable/ic_qr_scanner" />

        <Button
            android:id="@+id/button_scan_gallery"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingVertical="12dp"
            android:text="Pindai dari Galeri"
            app:icon="@android:drawable/ic_menu_gallery" />

    </LinearLayout>
</LinearLayout>